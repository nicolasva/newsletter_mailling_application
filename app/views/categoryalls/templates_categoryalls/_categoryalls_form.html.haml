%h2
 = t("categoryalls.edit.categoryall_of_mail_start")
.class_list_edit_button
 %ul#categoryalls
  - @mailstart.categoryalls.order(:position).each do |categoryall|
   = content_tag_for :li, categoryall do
    = categoryall_field.submit(categoryall.name, :name=>"button_categoryall_#{categoryall.id}")
    = categoryall_field.submit("x", :name=>"button_supcategoryall_#{categoryall.id}", :class=>"class_button_delete_left")
 = categoryall_field.hidden_field(:id, :id=>"categoryall_id")

 %p
  = categoryall_field.label(:name)
  %br
  = categoryall_field.text_field(:name)
 %p
  = categoryall_field.submit(t(".add_new_subcontact"), :name=>"button_addsubcontact_#{@categoryall.id}")
